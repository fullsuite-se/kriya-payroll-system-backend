    is_paid             Boolean
    created_at          DateTime      @default(now()) @db.Timestamp(0)
    updated_at          DateTime      @default(now()) @db.Timestamp(0)

    employee Employee @relation(fields: [employee_id], references: [employee_id])
    company  Company  @relation(fields: [company_id], references: [company_id])

    @@map("employee_absences")
}

model EmployeeLeave {
    employee_leave_id String      @id @default(uuid()) @db.Char(36)
    employee_id       String      @db.Char(36)
    company_id        String      @db.Char(36)
    leave_date        DateTime    @db.Date
    leave_type        String      @db.VarChar(100)
    leave_status      LeaveStatus
    is_paid           Boolean
    created_at        DateTime    @default(now()) @db.Timestamp(0)
    updated_at        DateTime    @default(now()) @db.Timestamp(0)

    employee Employee @relation(fields: [employee_id], references: [employee_id])
    company  Company  @relation(fields: [company_id], references: [company_id])

    @@map("employee_leaves")
}

model EmployeeRestday {
    employee_restday_id String    @id @default(uuid()) @db.Char(36)
