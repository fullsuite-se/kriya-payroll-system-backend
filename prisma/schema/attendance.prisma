    hours_rendered      Decimal?  @db.Decimal(5, 2)
    hours_worked        Decimal?  @db.Decimal(5, 2)
    hours_logged        Decimal?  @db.Decimal(5, 2)
    undertime           Decimal?  @db.Decimal(5, 2)
    tardiness           Decimal?  @db.Decimal(5, 2)
    night_differential  Decimal?  @db.Decimal(5, 2)
    shift_type          ShiftType @default(REGULAR)
    created_at          DateTime  @default(now()) @db.Timestamp(0)
    updated_at          DateTime  @default(now()) @db.Timestamp(0)

    employee Employee @relation(fields: [employee_id], references: [employee_id])
    company  Company? @relation(fields: [company_id], references: [company_id])

    @@map("employee_restdays")
